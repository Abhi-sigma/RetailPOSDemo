@page
@model RetailPOS.Pages.Sales.Offline.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OfflineSales</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfflineSales.PurchaseCompletedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfflineSales.PurchaseCompletedOn)
        </dd>
    </dl>
    <div>
       
        <table class="table table-bordered">
            <tbody>
                <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Cost</th>
                </tr>
        @foreach (var item in Model.OfflineSales.LineSaleItem)
        {

            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price</td>
                <td>
                 @(item.Quantity*item.Product.Price)
                </td>
            </tr>
        }
       
            </tbody>
        </table>
         <div>
            <span>
                 TotalCost
            </span>
            <span>
                @Model.OfflineSales.TotalCost;
            </span>
        </div>
     
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.OfflineSales?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
